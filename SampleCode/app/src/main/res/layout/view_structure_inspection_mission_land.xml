<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inspection_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="#F5F7FA">

    <!-- LEFT COLUMN: Controls and Status -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="8dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Inspeção Automatizada"
            android:textSize="18sp"
            android:textColor="#1E3A8A"
            android:textStyle="bold" />

        <!-- Status de conexão -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_bg"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: "
                    android:textStyle="bold"
                    android:textColor="#1E3A8A"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/text_connection_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desconectado"
                    android:textColor="#DC2626"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text_product_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modelo: N/A"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/text_battery_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bateria: N/A"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/text_drone_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Localização: N/A"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Importação de Dados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_card_bg"
            android:orientation="vertical"
            android:padding="8dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Arquivos de Missão"
                android:textColor="#1E3A8A"
                android:textStyle="bold"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_load_structures"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:text="Importar Estruturas" />

                <Button
                    android:id="@+id/btn_load_photo_positions"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:text="Importar Posições" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_csv_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Nenhum arquivo carregado"
                android:textSize="12sp"
                android:textColor="#4B5563" />
        </LinearLayout>

        <!-- Controles de missão -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Controles de Missão"
            android:textColor="#1E3A8A"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_start_mission"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:enabled="false"
                android:background="@drawable/button_bg_start"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:text="Iniciar" />

            <!-- ToggleButton for pause/resume -->
            <ToggleButton
                android:id="@+id/btn_pause"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:enabled="false"
                android:background="@drawable/button_bg_pause"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textOff="Pausar"
                android:textOn="Retomar"
                android:drawableStart="@drawable/pause_play_selector"
                android:paddingStart="4dp" />

            <Button
                android:id="@+id/btn_stop_mission"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:enabled="false"
                android:background="@drawable/button_bg_stop"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:text="Encerrar" />
        </LinearLayout>

        <!-- Status text -->
        <TextView
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/status_bg"
            android:minHeight="30dp"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:text="Status: Pronto para iniciar missão"
            android:elevation="3dp" />
    </LinearLayout>

    <!-- RIGHT COLUMN: Photo Preview and Controls -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <!-- Visualização da Foto -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Visualização da Foto"
            android:textColor="#1E3A8A"
            android:textSize="12sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/photo_preview_bg"
            android:padding="2dp"
            android:elevation="3dp">

            <ImageView
                android:id="@+id/image_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/text_no_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Aguardando foto do drone..."
                android:textSize="14sp"
                android:textColor="#4B5563" />
        </FrameLayout>

        <!-- Controles de Foto -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:text="Controle de Fotos"
            android:textColor="#1E3A8A"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_confirm_photo"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:enabled="false"
                android:background="@drawable/button_bg_confirm"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:text="Confirmar Foto" />

            <Button
                android:id="@+id/btn_adjust_position"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:enabled="false"
                android:background="@drawable/button_bg_adjust"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:text="Ajustar Posição" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_take_photo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:enabled="false"
            android:background="@drawable/button_bg_photo"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:text="Tirar Foto Manual" />
    </LinearLayout>
</LinearLayout>